<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="20dp"
    >

 <ScrollView
     android:id="@+id/ScrollView1"
     android:layout_width="match_parent"
     android:layout_height="350dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9999CC"
        android:text="Enter your name:" />

        <EditText
        android:id="@+id/etsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

             <requestFocus />
       
    </EditText>

    <TextView
        android:id="@+id/textView6"
         android:textColor="#9999CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email: "/>

    <EditText
        android:id="@+id/etsEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#9999CC"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Password:" />

    <EditText
        android:id="@+id/etsPass"
        android:layout_width="match_parent"
       
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
         android:textColor="#9999CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Phone no: " />

    <EditText
        android:id="@+id/etsPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
         android:textColor="#9999CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter address:" />

    <EditText
        android:id="@+id/etsAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
               android:textColor="#9999CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the credit(in Rs):" />

    <EditText
        android:id="@+id/etsCredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />
</LinearLayout>
    
    </ScrollView>
    <Button
        android:id="@+id/bsRegister"
        
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/mybutton"
        android:alpha="0.7"
       
        android:textColor="#000000"
        android:text="Register" />
    

</LinearLayout>
