<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   android:padding="20dp">

    <TextView
        android:id="@+id/tvdisplayamount"
        android:layout_width="wrap_content"
        android:textColor="#9999CC"
        android:layout_height="wrap_content"
         android:layout_gravity="center"
        android:text="Amount to be paid is (Rs)" 
         android:padding="10dp"
        />

    <Button
        android:id="@+id/bpayfromcredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="PAY FROM CREDIT"
         android:padding="10dp" />

    <TextView
        android:id="@+id/tvbeforepaycredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9999CC"
        android:text=" Credit initially (Rs)"
         android:layout_gravity="center"
         android:padding="10dp" />

    <TextView
        android:id="@+id/tvafterpaycredit"
        android:layout_width="wrap_content"
    android:textColor="#9999CC"
        android:layout_height="wrap_content"
        android:text="Credit After Payment (Rs)" 
         android:layout_gravity="center"
         android:padding="10dp"/>


    <Button
        android:id="@+id/bnotifyemail"
        android:layout_width="200dp"
        android:layout_height="40dp"
       
        android:background="@drawable/mybutton"
        android:alpha="0.7"
       android:textColor="#000000"
         android:visibility="invisible"
        android:text="Notify Via Email" 
       
          android:layout_gravity="center"
         />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text=""
       />
    
    <Button
        android:id="@+id/bcreditexit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text= "Exit"
    android:visibility="invisible"
        android:layout_gravity="center"
        android:background="@drawable/mybutton"
        android:alpha="0.7"
     android:textColor="#000000"
          />

    <TextView
        android:id="@+id/tv22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:visibility="invisible"
        android:text="Enter the Amount of money you want to deposit (in Rs): "
         android:textColor= "#9999CC"/>

    <EditText
        android:id="@+id/etrechargeifless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:visibility="invisible"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/brechargeifless"
        android:layout_width="100dp"
        android:layout_height="40dp"
          android:visibility="invisible"
        android:layout_gravity="center"
        android:text=" UPDATE "
        android:background="@drawable/mybutton"
        android:alpha="0.7"
     android:textColor="#000000" />

</LinearLayout>
