<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:weightSum="120"
    android:padding="20dp"
   
   
    >

    <Button
        android:id="@+id/bRegister"
        android:layout_width="200dp"
        android:layout_height="20dp"
      android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
                android:text="REGISTER CUSTOMERS"
         android:layout_gravity="center"
        
         android:layout_weight="15" 
      
        
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />
    <Button
        android:id="@+id/badmin"
       android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
        android:text="ADMIN ACCOUNT" 
         android:layout_gravity="center"
          android:layout_weight="15" 
          />

  
  <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />
    

    <Button
        android:id="@+id/bShop"
      android:layout_width="200dp"
        android:layout_height="20dp"
       android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
      
        
        android:text="SHOP AND PAY"
         android:layout_gravity="center"
          android:layout_weight="15" 
          />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bcustdetails"
       android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
        
        android:text=" EDIT CUSTOMER DETAILS" 
         android:layout_gravity="center"
          android:layout_weight="15"
           />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bitems"
        android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
       android:alpha="0.7"
        android:text="STOCK AND CUSTOMER DETAILS"
        android:textColor="#000000"
         android:layout_gravity="center"
          android:layout_weight="15" 
           />
    

  
         

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />

    <Button
        android:id="@+id/bAbout"
       android:layout_width="200dp"
        android:layout_height="20dp"
         android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
        android:text="ABOUT THE APP" 
         android:layout_gravity="center"
          android:layout_weight="15" 
          />

  
  <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="" />
    
</LinearLayout>