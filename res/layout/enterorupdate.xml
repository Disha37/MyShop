<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
 android:weightSum="80"
  >

    <Button
        android:id="@+id/bAdditem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add new items"
        android:layout_weight="10"
         android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
         android:layout_gravity="center"  
         
        />
     <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="" />

    <Button
        android:id="@+id/bUpdatequantity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
        android:layout_weight="10"
        android:text="Update item Quantity"
         android:layout_gravity="center"  />
     <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="" />

    <Button
        android:id="@+id/bviewcustdetails"
        android:layout_width="200dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
         android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
        android:text="View  Customer Details"
         android:layout_gravity="center"  />
 <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="" />
    <Button
        android:id="@+id/bviewstockdetails"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:background="@drawable/mybutton"
        android:alpha="0.7"
        android:textColor="#000000"
        android:layout_weight="10"
        android:text="View stock Details"
         android:layout_gravity="center"  />
     <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text="" />
 
     
</LinearLayout>
